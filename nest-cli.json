{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "../generated/**/*", "outDir": "./dist/generated" },
      { "include": "../i18n/**/*.json", "outDir": "./dist/i18n" },
      { "include": "../public/**/*", "outDir": "./dist/public" }
    ],
    "watchAssets": true
  }
}
